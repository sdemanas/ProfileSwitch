{
    "manifest_version": 2,
    "name": "Profile Switch",
    "version": "1.0",
    "description": "Switch between Firefox profiles",
    "permissions": [
        "sessions"
    ],
    "background": {
        "scripts": [
            "profileswitch.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}